---
import { getLangFromUrl, useTranslations } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer
    class="bottom-0 left-0 z-20 w-full p-4 shadow md:flex md:items-center md:justify-between md:p-6 bg-white"
>
    <div
        class="max-w-screen-2xl w-full flex flex-wrap items-center justify-between mx-auto p-4"
    >
        <span class="text-sm sm:text-center"
            >Â© 2023 <a href={`/${lang}/`} class="hover:underline"
                >OutFit Oasis</a
            >. All Rights Reserved.
        </span>
        <ul
            class="flex flex-col font-medium p-4 md:p-0 mt-4 border rounded-lg md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0"
        >
            <li>
                <a
                    href={`/${lang}/`}
                    class="block py-2 px-3 rounded md:p-0"
                    aria-current="page">{t("nav.home")}</a
                >
            </li>
            <li>
                <a
                    href={`/${lang}/dashboard/`}
                    class="block py-2 px-3 rounded md:p-0"
                    >{t("nav.dashboard")}</a
                >
            </li>
            <li>
                <a
                    href=`/${lang}/inventory/`
                    class="block py-2 px-3 rounded md:p-0"
                    >{t("nav.inventory")}</a
                >
            </li>
        </ul>
    </div>
</footer>
