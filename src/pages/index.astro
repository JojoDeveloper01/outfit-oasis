---
import Layout from "../layouts/Layout.astro";
import Login_RegisterModal from "@components/Login_Register.astro";
import InventoryTable from "@components/InventoryTable.astro";
import { getInventory } from "@lib/utils";
import { turso } from "@turso";

const items = await getInventory();
---

<Layout>
	<main class="container mx-auto p-4">
		<h1 class="text-2xl font-bold mb-4">Invent√°rio</h1>
		<InventoryTable items={items} />
		<button
			class="btn btn-primary"
			data-modal-target="login-modal"
			data-modal-toggle="login-modal"
		>
			Login
		</button>
		<button
			class="btn btn-secondary"
			data-modal-target="register-modal"
			data-modal-toggle="register-modal"
		>
			Registrar
		</button>

		<!-- Modais -->
		<Login_RegisterModal />
	</main>
</Layout>
